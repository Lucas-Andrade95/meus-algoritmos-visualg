algoritmo "cONTAGEM REGRESSIVA"
// Função :
// Autor :
// Data : 10/01/2022
// Seção de Declarações 
var
        contador: inteiro

inicio
      EscrevaL ("Contagem regressiva para a explosão...")
      contador <- 10
      Enquanto (contador) >= 0 faca
               EscrevaL (contador)
               contador <- contador - 1
      FimEnquanto
      
      EscrevaL ("BOOOOM !!!")
fimalgoritmo
